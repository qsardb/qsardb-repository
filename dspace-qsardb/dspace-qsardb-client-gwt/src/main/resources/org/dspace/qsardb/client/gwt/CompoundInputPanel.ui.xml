<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .panel div { padding: 3px 2px; }
  </ui:style>

  <g:HTMLPanel styleName='{style.panel}'>
    <div>Chemical structure input (InChI or SMILES format):</div>

    <div>
      <g:TextBox ui:field='textBox' visibleLength="60"/>
      <g:Button ui:field='drawButton'>Draw</g:Button>
    </div>
	<div>
      <g:Button ui:field='calculateButton'>Calculate</g:Button>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
