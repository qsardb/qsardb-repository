<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .panel div {
      display: flex;
      padding: 3px 2px;
    }
    .panel input {
      max-width: 42em;
      flex-grow: 1;
      margin-right: 4px;
    }
  </ui:style>

  <g:HTMLPanel styleName='{style.panel}'>
    <div>Chemical structure input (InChI or SMILES format):</div>

    <div>
      <g:TextBox ui:field='textBox'/>
      <g:Button ui:field='drawButton'>Draw</g:Button>
    </div>
	<div>
      <g:Button ui:field='calculateButton'>Calculate</g:Button>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>
